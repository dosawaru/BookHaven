@model Category

<form method="post" asp-action="Delete">
    <div class="border p-3 mt-4">
        <div class="row pb-2">
            <h2 class="text-primary">Delete Category</h2>
            <hr />
        </div>
        <!-- Fields disabled for deletion -->
        <div class="mb-3">
            <label asp-for="Name"></label>
            <input asp-for="Name" class="form-control" disabled />
        </div>
        <div class="mb-3">
            <label asp-for="DisplayOrder"></label>
            <input asp-for="DisplayOrder" class="form-control" disabled/>
        </div>
        <!-- Button to submit form for deleting category -->
        <button type="submit" class="btn bg-danger text-white" style="width: 150px">Delete</button>
        <!-- Button to navigate back to category list -->
        <a asp-controller="Category" asp-action="Index" class="btn btn-primary" style="width:160px">
            Back to List
        </a>
    </div>
</form>

@{
    <partial name="_ValidationScriptsPartial" />  <!-- Render partial view for validation scripts -->
}
